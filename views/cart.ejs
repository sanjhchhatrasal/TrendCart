<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
</head>
<body>
   <div class="main h-screen w-full py-3 px-5 relative overflow-x-hidden">
        <div class="nav h-[8%] fixed z-[999] w-[96%] flex items-center justify-between border-b-2 border-zinc-600 relative">
            <h1 class="text-3xl text-pink-600 font-semibold">TrendCart</h1>
            <div class="right flex items-center gap-5">
                <a href="/profile" class="text-xl font-semibold">Home</a>
                <a href="/product" class="text-xl font-semibold">Create new product</a>
                <a href="/account" class="text-xl font-semibold">My Account</a>
                <a class="text-xl text-red-600 font-semibold" href="/logout">Logout</a>
            </div>
        </div>
        
        <div class="content flex items-center gap-5 w-full h-full">
            <div class="right w-full absolute left-10 top-[13%] flex flex-wrap gap-2 pt-2">
               
               <% if(user.cart.length > 0){ %>
                  <% user.cart.reverse().forEach(function(product){ %>
                    <div class="item h-80 w-[80%] flex">
                        <div class="left w-[30%] h-full bg-green-600">
                            <div class="up h-[70%] w-full bg-[<%= product.bgColor %>]">
                            
                                <img class="h-full w-full object-cover" src="data:image/jpg;base64, <%= product.productPic.toString('base64') %>" alt="">
                            </div>
                            <div class="btm h-[30%]  w-full  flex items-center justify-between">
                                <div class="name-price font-semibold h-full w-full text-[<%= product.textColor %>]">
                                    <div class="h-[50%] w-full flex items-center px-3  bg-[<%= product.panelColor %>]">
                                        <div class="name"> <%= product.name %> </div>
                                    </div>
                                   <div class="h-[50%] w-full flex items-center justify-between px-3  bg-[<%= product.textColor %>] text-[<%= product.panelColor %>]">
                                    <div class="price">Net Total </div>
                                    <div>₹ <%= product.price + 20 - product.discountedPrice %></div>
                                   </div>
                                </div>
                             </div>
                        </div>
                        <div class="right w-[70%] h-full pl-10">
                            <h6 class="text-xl font-semibold">Price Breakdown</h6>
                            <div>
                                <div class="flex gap-24 mt-3">
                                    <h5>Total MRP</h5>
                                    <h5>₹ <%= product.price  %></h5>
                                </div>
                                <div class="flex gap-12 mt-3">
                                    <h5>Discount on MRP</h5>
                                    <h5>₹ <%= product.discountedPrice %></h5>
                                </div>
                                <div class="flex gap-20 mt-3">
                                    <h5>Platform Fee</h5>
                                    <h5>₹ 20</h5>
                                </div>
                                <div class="flex gap-20 mt-3">
                                    <h5>Shipping Fee</h5>
                                    <h5>FREE</h5>
                                </div>
                            </div>
                            <div class="border-t-2 border-zinc-900 mt-5 w-[90%]">
                               <div class="flex gap-20 mt-5 font-semibold">
                                <h2>Total Amount</h2>
                                <h2 class="text-green-600">₹ <%= product.price + 20 - product.discountedPrice %></h2>
                               </div>
                            </div>
                           </div>
                    </div>
                <%  }) %>  
             <%  }else{ %>
                <p class="text-zinc-500 text-xl mt-5">No products added yet</p>
            <% } %>
           

            </div>
        </div>
   </div>

</body>
</html>
